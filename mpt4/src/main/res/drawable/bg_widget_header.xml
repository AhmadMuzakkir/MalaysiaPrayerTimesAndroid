<selector
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:exitFadeDuration="@android:integer/config_shortAnimTime">

    <item android:state_focused="false" android:state_selected="false" android:state_pressed="false">
        <shape>
            <gradient android:angle="270" android:startColor="#DDFF8800" android:endColor="#AAFF8800" android:type="linear" />
        </shape>
    </item>

    <item android:state_focused="false" android:state_selected="false" android:state_pressed="true">
        <shape>
            <gradient android:angle="270" android:startColor="#DDFFBB33" android:endColor="#AAFFBB33" android:type="linear" />
        </shape>
    </item>

</selector>
