<resources>

    <style name="MptTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="appBarLayoutStyle">@style/MptTheme.AppBarLayout</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="compassStyle">@style/Compass</item>
        <item name="mosqueDividerDrawable">@drawable/divider</item>
        <item name="prayerOverflowTint">@android:color/white</item>
        <item name="tabLayoutStyle">@style/MptTheme.TabLayout</item>
        <item name="tabIconActiveColor">@color/colorAccent</item>
        <item name="tabIconNormalColor">@android:color/white</item>
    </style>

    <style name="MptTheme.AppBarLayout" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="elevation">0dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="MptTheme.TabLayout" parent="Widget.Design.TabLayout">
    </style>

    <style name="MptTheme.Settings" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>
